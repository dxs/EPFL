<launch>
  <group ns="stereo_test">
    <!-- left camera on /dev/video0 -->
    <node name="left_cam" pkg="usb_cam" type="usb_cam_node" output="screen">
      <param name="video_device" value="/dev/video0" />
      <param name="image_width" value="640" />
      <param name="image_height" value="480" />
      <param name="pixel_format" value="mjpeg" />
      <param name="camera_info_url" value="" />
      <param name="camera_name" value="left_cam" />
      <param name="io_method" value="mmap" />
    </node>

<!-- maybe not now
    <node name="left_image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
      <remap from="image" to="/usb_cam/left_image_raw" />
      <param name="autosize" value="true" />
    </node>
-->

    <!-- right camera on /dev/video1 -->
    <node name="right_cam" pkg="usb_cam" type="usb_cam_node" output="screen">
      <param name="video_device" value="/dev/video1" />
      <param name="image_width" value="640" />
      <param name="image_height" value="480" />
      <param name="pixel_format" value="mjpeg" />
      <param name="camera_info_url" value="" />
      <param name="camera_name" value="right_cam" />
      <param name="io_method" value="mmap" />
    </node>

<!-- Maybe not now
    <node name="rigth_image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
      <remap from="image" to="/usb_cam/right_image_raw" />
      <param name="autosize" value="true" />
    </node>
-->

  </group>

  <!-- monitoring and configuration tools -->
  <node pkg="rxtools" type="rxconsole" name="rxconsole" />
  <node pkg="dynamic_reconfigure" type="reconfigure_gui" name="reconfigure_gui />
</launch>
