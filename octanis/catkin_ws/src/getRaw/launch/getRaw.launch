<launch>
  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen">
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="mjpeg" />
    <param name="camera_info_url" value="file:///home/sven/octanis/right_cam_640x480.yaml" />
    <param name="camera_name" value="right_cam" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="brightness" value="60" />
    <param name="contrast" value="60" />
    <param name="io_method" value="mmap" />
    <param name="framerate" value="2" />
  </node>

  <node name="image_view_raw" pkg="image_view" type="image_view" respawn="true" output="screen">
    <remap from="image" to="/usb_cam/image_raw" />
    <param name="autosize" value="true" />
  </node>

  <node name="image_proc" pkg="image_proc" type="image_proc" ns="usb_cam" />


</launch>
